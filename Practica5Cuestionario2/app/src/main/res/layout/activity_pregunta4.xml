<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta 4: ¿Cuál es el metal más ligero?"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radioGroupRespuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButtonIncorrecto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hierro" />

        <RadioButton
            android:id="@+id/radioButtonIncorrecto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cobre" />

        <RadioButton
            android:id="@+id/radioButtonCorrecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Litio" />

        <RadioButton
            android:id="@+id/radioButtonIncorrecto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aluminio" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente" />
</LinearLayout>
