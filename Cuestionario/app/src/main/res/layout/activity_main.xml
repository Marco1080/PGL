<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewPikachu"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="Imagen de Pikachu"
                    android:src="@drawable/pika"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Pokémon"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textViewPregunta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. ¿Cuál es el Pokémon inicial de tipo Fuego en la primera generación?"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta1A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Charmander"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta1B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bulbasaur"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta1C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Squirtle"
                        android:textColor="#FFFFFF" />

                </RadioGroup>

                <TextView
                    android:id="@+id/textViewRespuesta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respuesta correcta: Charmander"
                    android:visibility="gone"
                    android:textColor="#FF5722" />

                <TextView
                    android:id="@+id/textViewPregunta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. ¿De qué tipo es Pikachu?"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif" />

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta2A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eléctrico"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta2B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Agua"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta2C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fuego"
                        android:textColor="#FFFFFF" />

                </RadioGroup>

                <TextView
                    android:id="@+id/textViewRespuesta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respuesta correcta: Eléctrico"
                    android:visibility="gone"
                    android:textColor="#FF5722" />

                <TextView
                    android:id="@+id/textViewPregunta3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. ¿Qué evolución es de Eevee en tipo Agua?"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif" />

                <RadioGroup
                    android:id="@+id/radioGroup3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
