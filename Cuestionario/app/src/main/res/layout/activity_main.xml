                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta4C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Suicune"
                        android:textColor="#FFFFFF" />

                </RadioGroup>

                <TextView
                    android:id="@+id/textViewRespuesta4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respuesta correcta: Articuno"
                    android:visibility="gone"
                    android:textColor="#FF5722" />

                <TextView
                    android:id="@+id/textViewPregunta5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. ¿Cuál es el Pokémon de tipo Dragón más famoso de la primera generación?"
                    android:textColor="#FFFFFF"
