                    android:textSize="18sp"
                    android:fontFamily="sans-serif" />

                <RadioGroup
                    android:id="@+id/radioGroup9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta9A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Psíquico"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta9B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lucha"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta9C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fantasma"
                        android:textColor="#FFFFFF" />

                </RadioGroup>

                <TextView
                    android:id="@+id/textViewRespuesta9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respuesta correcta: Psíquico"
                    android:visibility="gone"
                    android:textColor="#FF5722" />

                <TextView
                    android:id="@+id/textViewPregunta10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10. ¿Cuál es el Pokémon más raro en la primera generación?"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif" />

                <RadioGroup
                    android:id="@+id/radioGroup10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta10A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mew"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta10B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mewtwo"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioButtonRespuesta10C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Zapdos"
                        android:textColor="#FFFFFF" />

